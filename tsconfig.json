{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "types": ["node"]
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./config/jest/jest.config.ts",
    "./config/jest/jestEmptyComponent.tsx",
    "./.storybook/preview.tsx",
    "./.storybook/main.ts",
    "./webpack.config.ts",
    "./vite.config.ts",
    "./scripts/**/*.ts",
    "./eslint.config.mjs",
    "./cypress.config.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.stories.ts",
    "./src/**/*.stories.tsx",
    "./json-server/index.js"
  ],
  "exclude": ["./.fttemplates/**/*"]
}
